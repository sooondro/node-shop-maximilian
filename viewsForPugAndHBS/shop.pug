extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet" href="/css/product.css")

block content 
    main
        if prods.length > 0
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="https://www.planetware.com/wpimages/2020/02/france-in-pictures-beautiful-places-to-photograph-eiffel-tower.jpg", alt="A book")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description Mmmm very nice book i like it
                        .card__actions 
                            button.btn Add to Cart
        else
            h1 No Products
